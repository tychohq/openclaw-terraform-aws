# Copy to terraform.tfvars and customize.
# NEVER commit terraform.tfvars — it is gitignored.

aws_region  = "us-east-1"
environment = "prod"

# ── Instance ───────────────────────────────────────────────────────────────────
# instance_type   = "t4g.small"
# ebs_volume_size = 30

# ── OpenClaw Config ────────────────────────────────────────────────────────────
#
# Option A: Reference files next to this repo (recommended)
#   Place your filled-in config files alongside the repo, then reference them:
#
# openclaw_config_json        = file("../openclaw-secrets.json")
# openclaw_env                = file("../openclaw-secrets.env")
# openclaw_auth_profiles_json = file("../openclaw-auth-profiles.json")
#
# Option B: Inline string (for CI/CD — pass via TF_VAR_openclaw_config_json)
#
# Option C: Leave empty and configure manually over SSM after deploy
# openclaw_config_json        = ""
# openclaw_env                = ""
# openclaw_auth_profiles_json = ""

