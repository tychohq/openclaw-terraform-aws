# terraform.tfvars — Pre-configured OpenClaw deployment.
# Copy to terraform.tfvars and verify all file() paths exist.
# NEVER commit terraform.tfvars — it is gitignored.
#
# Expected directory layout (both repos cloned as siblings):
#
#   ~/projects/
#   ├── mac-mini-setup/                       # Source of truth for all OpenClaw content
#   │   ├── openclaw-secrets.json             # Fill in from config/openclaw-config.template.json
#   │   ├── openclaw-secrets.env              # Fill in from config/openclaw-env.template
#   │   ├── openclaw-auth-profiles.json       # Fill in from config/openclaw-auth-profiles.template.json
#   │   ├── openclaw-workspace/
#   │   │   ├── SOUL.md
#   │   │   ├── USER.md
#   │   │   ├── AGENTS.md
#   │   │   ├── IDENTITY.md
#   │   │   ├── TOOLS.md
#   │   │   ├── MEMORY.md
#   │   │   ├── docs/
#   │   │   ├── tools/
#   │   │   ├── scripts/
#   │   │   └── bootstrap/
#   │   ├── openclaw-skills/
#   │   │   ├── answeroverflow/
#   │   │   ├── clawdstrike/
#   │   │   │   ├── references/
#   │   │   │   └── scripts/
#   │   │   ├── cron-setup/
#   │   │   ├── doc-layers/
#   │   │   ├── email/
#   │   │   ├── gog/
#   │   │   ├── self-reflection/
#   │   │   └── system-watchdog/
#   │   └── cron-jobs/
#   └── openclaw-terraform-aws/               # This repo (Terraform only — no content)
#       └── terraform/
#           └── terraform.tfvars              # ← you are here; all paths use ../../mac-mini-setup/
#
# All file() paths are relative to the terraform/ directory.

aws_region  = "us-east-1"
environment = "prod"

# ── Instance ───────────────────────────────────────────────────────────────────

instance_type   = "t4g.small"
ebs_volume_size = 30

# ── Owner ──────────────────────────────────────────────────────────────────────

owner_name = "Your Name"
timezone   = "America/New_York"

# ── OpenClaw Config ────────────────────────────────────────────────────────────
#
# Fill in the template files from mac-mini-setup/config/ and save them to the
# mac-mini-setup root. They are gitignored there and never committed.
#
#   config/openclaw-config.template.json        → openclaw-secrets.json
#   config/openclaw-env.template                → openclaw-secrets.env
#   config/openclaw-auth-profiles.template.json → openclaw-auth-profiles.json

openclaw_config_json        = file("../../mac-mini-setup/openclaw-secrets.json")
openclaw_env                = file("../../mac-mini-setup/openclaw-secrets.env")
openclaw_auth_profiles_json = file("../../mac-mini-setup/openclaw-auth-profiles.json")

